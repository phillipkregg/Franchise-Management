<h2>Franchise Sets</h2>

<table class="table">
  <tr>
    <th>Set name</th>
    <th>Set</th>
    <th>Soa</th>
    <th>Address</th>
    <th>Time zone</th>
    <th>Country</th>
    <th>Temperature</th>
    
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @franchise_sets.each do |franchise_set| %>
  <tr>
    <td><%= franchise_set.set_name %></td>
    <td><%= franchise_set.set_id %></td>
    <td><%= franchise_set.soa_id %></td>
    <td><%= franchise_set.address %></td>
    <td><%= franchise_set.time_zone %></td>
    <td><%= franchise_set.country %></td>
    <td><%= franchise_set.temperature %></td> 
    <td><%= link_to 'Edit', edit_franchise_set_path(franchise_set), :class => "btn" %></td>
    <td><%= button_to 'Delete', franchise_set, confirm: 'Are you sure?', :class => "btn btn-danger", method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= button_to 'New Franchise set', new_franchise_set_path, :method => :get, :class=>'btn btn-primary' %>
